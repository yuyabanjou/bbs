<div class="container">

  <div class="row">
		<div class="col">
			<h4>スレッド</h4>
			<%= @item.title %>
		</div>
	</div>

  <div class="row">
		<div class="col">
			<h4>概要</h4>
			<%= @item.text %>
		</div>
	</div>

  <div class="row">
		<div class="col">
		<h4>カテゴリ</h4>
		<% @item.tag_list.each do |tag| %>
		  <span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
		<% end %>
		</div>
	</div>

	<% if user_signed_in? %>
		<% if current_user.id == @item.user_id %>
	<div class="row">
		<div class="col">
			<%= link_to user_item_path(@item), class: 'btn btn-danger', method: :delete, data: {confirm: "コメントも全て削除されますが宜しいですか？"} do %>
				<span>削除</span>
			<% end %>
		</div>
	</div>

		<% end %>
	<% end %>

	<% @item.comments.each do |comment| %>

	<hr>
	<div class="row">
		<div class="col">
			<%= comment.id %>
		</div>
		<div class="col">
			<%= comment.created_at.strftime('%Y/%m/%d') %>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<%= comment.text %>
		</div>
	</div>

	<% end %>

	<% if user_signed_in? %>

		<%= form_for [@item, @comment] do |f| %>

		<div class="row">
		  <%= f.text_area :text, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
		  <%= f.submit "コメント", class: "btn btn-success" %>
		</div>

		<% end %>
	<% else %>
		<%= link_to "ログインしてコメントする", new_user_session_path %>
	<% end %>

</div>