<div class="container">
  <div class="row">
  	<table class="table table-hover">
			<thead>
				<tr>
					<th>No.</th>
					<th>スレタイ</th>
					<th>概要</th>
					<th>カテゴリ</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td><%= link_to item.title, item_path(id: item.id) %></td>
					<td><%= item.text %></td>
					<td>
						<% item.tag_list.each do |tag| %>
							<span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
</div>
